

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <ImageView
            android:id="@+id/miss_one_img"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:src="@drawable/user"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/mis_one_name"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Venkatarao"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mis_one_age"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:typeface="monospace"
            android:text="Age:7"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mis_one_pin"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:typeface="monospace"
            android:text="Pin:532459"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mis_one_add"
            android:gravity="center"
            android:typeface="monospace"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Rgukt,Nuzvid."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="Status:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Not Found"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textSize="17dp"
                android:paddingRight="15dp"
                android:background="#f50057"
                android:textColor="#ffffff"
                android:id="@+id/mis_one_status" />
        </LinearLayout>

        <Button
            android:text="Call 100"
            android:onClick="call"
            android:textColor="#ffffff"
            android:background="@color/me"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

    </LinearLayout>