<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mis_photo"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="100dp"
            android:src="@drawable/me1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/mis_name"
                android:text="Venkta Rao"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#0c0c0c"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Age:67"
                android:id="@+id/mis_age"
                android:textColor="#0c0c0c"
                android:typeface="monospace"
                android:layout_height="wrap_content"
                tools:typeface="serif" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Pin:531116"
                android:id="@+id/mis_pin"
                android:textSize="14dp"
                android:textColor="#0c0c0c"
                android:typeface="monospace"
                android:layout_height="wrap_content"
                tools:typeface="serif" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Rgukt,Nuzvid"
                android:id="@+id/mis_ad"
                android:textSize="14dp"
                android:textColor="#0c0c0c"
                android:typeface="monospace"
                android:layout_height="wrap_content"
                tools:typeface="serif" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>