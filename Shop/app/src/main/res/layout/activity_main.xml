<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unknownpersons.shop.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="Shop here"
        android:textSize="59px"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="Choose a Item"
        android:textSize="39px"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/b"
        android:layout_height="200px">
        <ImageView
            android:layout_width="0px"
            android:layout_weight=".3"
            android:src="@mipmap/brief"
            android:layout_height="150px" />
        <TextView
            android:layout_width="0px"
            android:id="@+id/b_item"
            android:layout_weight=".7"
            android:textSize="30px"
            android:text="Cost: Rs.400.
Item:BriefCase"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/cd"
        android:layout_height="200px">
        <ImageView
            android:layout_width="0px"
            android:layout_weight=".3"
            android:src="@mipmap/cd"
            android:layout_height="150px" />
        <TextView
            android:id="@+id/cd_item"
            android:layout_width="0px"
            android:layout_weight=".7"
            android:textSize="30px"
            android:text="Cost: Rs.220.
Item:"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
